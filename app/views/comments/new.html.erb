<%= form_with model: [@post, @comment] do |form| %>
    <%= form.label :body %>
    <br>
    <%= form.text_field :body %>
    <%= form.hidden_field :post_id, value: params[:post_id] %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.submit "Post" %>
<% end %>