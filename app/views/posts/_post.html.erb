<div>
    <%= post.created_at %>
    <br>
    <strong><%= post.user.name + " " %></strong> says: 
    <br>
    <%= post.content %>
    <br>
    Liked by: 
    <br>
    <% post.likes.each do |like| %>
        <%= like.user.name + " " %>
    <% end %>
    <br>
    Comments:
    <br>
    <% post.comments.each do |comment| %>
        <%= render partial: "comments/comment", locals: { comment: comment } %>
    <% end %>
    <%= button_to "Like", post_likes_path(post), data: { 'turbo-method' => :post }%>
    <%= link_to "Comment", new_post_comment_path(post) %>
    <br>
</div>